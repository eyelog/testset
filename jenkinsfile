pipeline {
    agent any

    stages {
        stage ('Compile stage'){
            steps {
                withEnv(maven : 'MAVEN_HOME') {
                    sh 'mvn clean compile'
                }
            }
        }

        stage ('Testing stage') {
            steps {
                withEnv(maven : 'MAVEN_HOME') {
                    sh 'mvn test'
                }
            }
        }

        stage ('Deployment stage') {
            steps {
                withEnv(maven : 'MAVEN_HOME') {
                    sh 'mvn deploy'
                }
            }
        }
    }
}